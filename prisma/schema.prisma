generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  username       String   @unique
  passwordHash   String
  userAuthToken  String   @unique
  fname          String
  surname        String
  student_number String   @unique
  student_year   String
  avatar         String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  roleId         Int
  email          String
  role           Roles    @relation(fields: [roleId], references: [id])
}

model Roles {
  id   Int    @id @default(autoincrement())
  name String @unique
  User User[]
}

model Attendance {
  id             Int      @id @default(autoincrement())
  student_number String
  className      String
  InOrOut        String
  timeAttendance String
  createdAt      DateTime @default(now())
}

model Classes {
  id          Int      @id @default(autoincrement())
  status      Boolean
  description String
  startTime   DateTime
  endTime     DateTime
  startDate   DateTime
  endDate     DateTime
  repeating   String
  createdAt   DateTime @default(now())
}
